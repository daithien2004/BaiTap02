<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="/home">MyApp</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="/crud">Create</a></li>
          <li class="nav-item"><a class="nav-link" href="/get-crud">User List</a></li>
        </ul>
      </div>
    </nav>

    <!-- Banner -->
    <header
      class="jumbotron jumbotron-fluid text-center text-white"
      style="background: linear-gradient(135deg, #007bff, #00c6ff)"
    >
      <div class="container">
        <h1 class="display-4">Welcome to MyApp</h1>
        <p class="lead">Simple CRUD application with Node.js, Express & MySQL</p>
        <a href="/crud" class="btn btn-light btn-lg">Create User</a>
      </div>
    </header>

    <!-- Main actions -->
    <div class="container my-5">
      <div class="row text-center">
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
              <h5 class="card-title">About</h5>
              <p class="card-text">Learn more about this project</p>
              <a href="/about" class="btn btn-primary">Go to About</a>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
              <h5 class="card-title">Create User</h5>
              <p class="card-text">Add new user information</p>
              <a href="/crud" class="btn btn-success">Go to Create</a>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
              <h5 class="card-title">User List</h5>
              <p class="card-text">View, edit or delete users</p>
              <a href="/get-crud" class="btn btn-info">Go to User List</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
      <p class="mb-0">
        &copy; <%= new Date().getFullYear() %> MyApp. All rights reserved.
      </p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
